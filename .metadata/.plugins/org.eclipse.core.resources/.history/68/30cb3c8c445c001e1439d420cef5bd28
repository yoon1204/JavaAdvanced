package java2prj1.실습;

import java.util.function.Consumer;

public class 실습2 {

	public static void main(String[] args) {
		
		Consumer<String> r = str -> System.out.println("열라면, 순두부, 대파, 청양고추, 계란, 다진마늘, 고춧가루를 준비해주세요.\r\n"+str);
		r.accept("열라면이 원래 물 500ml인데\r\n"
				+ "순두부를 넣을거라서 물을 400ml만 넣어야 해요\r\n"				
				);
		
		Consumer<String> r2 = new Consumer<>() {
			
			public void accept(String t) {
				System.out.println(t+"1인분은 두부를 반 모만 넣어줍니다.\r\n");
						
						
			}};
			
		r2.accept("2인분이면 두부를 전부 다 넣으면 되는데\r\n");
		
		class B implements Consumer<String>{

			@Override
			public void accept(String t) {
				// TODO Auto-generated method stub
				System.out.println(t+"고춧가루 0.5숟가락, 다진마늘 0.5숟가락, 대파, 청양고추, 계란을 넣고 3분 30초 끓여주면 끝!!");
			}	
		}
		 B b = new B();
		 b.accept("순두부, 라면스프, 건더기스프를 넣고 물이 끓으면 면을 넣어줍니다");
		 
		 
	}
}
